{
    "name": "bot-inactividad",
    "version": "1.0.0",
    "description": "Discord bot para gestionar periodos de inactividad y estadisticas de roles.",
    "type": "module",
    "main": "src/index.ts",
    "scripts": {
        "start": "node src/index.ts",
        "lint": "eslint .",
        "build": "prisma generate && tsc",
        "dev": "node --watch src/index.ts",
        "db:copy-prod": "prisma migrate reset && node scripts/copydb.ts"
    },
    "imports": {
        "#config": "./src/config.ts",
        "#client": "./src/client.ts",
        "#logger": "./src/logger.ts",
        "#database": "./src/prisma/database.ts",
        "#inactivity.service": "./src/services/inactivity.service.ts",
        "#interactions.service": "./src/services/interactions.service.ts",
        "#role.service": "./src/services/role.service.ts"
    },
    "dependencies": {
        "@discordjs/rest": "2.6.0",
        "@js-temporal/polyfill": "0.5.1",
        "@prisma/adapter-pg": "7.4.0",
        "@prisma/client": "7.4.0",
        "cors": "2.8.6",
        "discord-api-types": "0.38.39",
        "discord.js": "14.25.1",
        "express": "5.2.1",
        "jose": "6.1.3",
        "luxon": "3.7.2",
        "pg": "8.18.0",
        "pino": "10.3.1",
        "zod": "4.3.6"
    },
    "devDependencies": {
        "@eslint/js": "9.39.2",
        "@eslint/json": "1.0.1",
        "@types/cors": "2.8.19",
        "@types/express": "5.0.6",
        "@types/luxon": "3.7.1",
        "@types/node": "25.2.3",
        "eslint": "9.39.2",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-import": "2.32.0",
        "globals": "17.3.0",
        "pino-pretty": "13.1.3",
        "prisma": "7.4.0",
        "typescript": "^6.0.0-beta",
        "typescript-eslint": "8.55.0"
    },
    "engines": {
        "node": ">=22.21"
    },
    "overrides": {
        "@prisma/client": {
            "typescript": "6.0.0-beta"
        },
        "typescript-eslint": {
            "typescript": "6.0.0-beta"
        }
    }
}
