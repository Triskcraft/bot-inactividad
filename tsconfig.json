{
    // Visit https://aka.ms/tsconfig to read more about this file
    "exclude": ["prisma.config.ts"],

    "include": ["src", "types.d.ts"],

    "compilerOptions": {
        // File Layout
        "baseUrl": ".",
        "paths": {
            "#config": ["src/config.ts"],
            "#client": ["src/client.ts"],
            "#database": ["src/prisma/database.ts"],
            "#logger": ["src/logger.ts"],
            "#inactivity.service": ["src/services/inactivity.service.ts"],
            "#interactions.service": ["src/services/interactions.service.ts"],
            "#role.service": ["src/services/role.service.ts"]
        },
        // "outDir": "./build",

        // Environment Settings
        // See also https://aka.ms/tsconfig/module
        "module": "nodenext",
        "target": "esnext",
        // For nodejs:
        "lib": ["esnext"],
        "types": ["node"],
        // and npm install -D @types/node
        "allowJs": true,

        "resolveJsonModule": true,

        // Other Outputs
        // "sourceMap": true,
        // "declaration": true,
        // "declarationMap": true,

        // Stricter Typechecking Options
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,

        // Style Options
        // "noImplicitReturns": true,
        // "noImplicitOverride": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        // "noFallthroughCasesInSwitch": true,
        // "noPropertyAccessFromIndexSignature": true,

        // Recommended Options
        "strict": true,
        "noImplicitOverride": true,
        "jsx": "react-jsx",
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true,
        "moduleDetection": "force",
        "skipLibCheck": true
    }
}
